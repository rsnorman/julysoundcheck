<div id="page_title" class="row">
  <div class="large-12 columns">
    <h2>
      <%= user_name %> Reviews
    </h2>
    <% if twitter_profile? %>
      <div id="secondary_page_title">
        <%= link_to 'Twitter Profile', "https://www.twitter.com/#{@screen_name}", id: 'twitter_profile_link', target: '_blank' %>
      </div>
    <% end %>
  </div>
</div>

<% @feed_items.each do |feed_item| %>
  <%= render partial: feed_item_partial(feed_item), locals: feed_item_locals(feed_item) %>
<% end %>

<div class="row">
  <div class="large-12 columns">
    <%= paginate @feed_items %>
  </div>
</div>


<% if @feed_items.empty? %>
  <div class="row">
    <div class="large-12 columns">
      <em>No JulySoundcheck reviews yet</em>
    </div>
  </div>
<% end %>

<% content_for :sidebar do %>
  <div id="reviewer_stats">
    <div class="row">
      <h4 class="sidebar-title columns">Summary</h4>
    </div>
    <div class="row">
      <div class="stat-label columns">
        Total Reviews
      </div>
    </div>
    <div class="row">
      <div id="total_reviews_stat" class="stat columns">
        <%= @stats.total_reviews %>
        <div class="separator"></div>
      </div>
    </div>
    <div class="row">
      <div class="stat-label columns">
        Average Rating
      </div>
    </div>
    <div class="row">
      <div id="average_rating_stat" class="stat columns">
        <%= @stats.average_rating %>
        <div class="separator"></div>
      </div>
    </div>
    <div class="row">
      <div class="stat-label columns">
        Longest Streak
      </div>
    </div>
    <div class="row">
      <div id="longest_streak_stat" class="stat columns">
        <%= @stats.longest_streak %> days
        <div class="separator"></div>
      </div>
    </div>
  </div>
<% end %>
