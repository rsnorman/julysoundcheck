

<div class="row">
  <div class="large-6 columns">
    <div class="row">
      <div class="large-12 columns">
        <h5>Log In</h5>
      </div>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="large-6 columns">
    <div class="row">
      <div class="large-12 columns">
        <h5>Twitter Log In</h5>
      </div>
    </div>
    <div id="twitter_sign_in" class="row">
      <div class="columns">
        <em>
          Sign in with your Twitter account to view recent tweets and tweet
          JulySoundcheck album reviews
        </em>
        <%= form_tag '/auth/twitter', method: 'get' do %>
          <button class="button">
            <%= image_tag "twitter-logo.png" %>
            Sign In
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
